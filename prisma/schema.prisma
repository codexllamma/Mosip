generator client {
  provider = "prisma-client-js"
}

// generator pyclient {
//   provider = "prisma-client-py"
// }

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String       @id @default(uuid())
  email           String       @unique
  name            String
  password        String?
  role            UserRole     @default(EXPORTER)
  organization    String?
  did             String?      @unique
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @default(now()) @updatedAt
  assignedBatches Batch[]      @relation("AssignedInspector")
  exportedBatches Batch[]      @relation("BatchExporter")
  exporter        Exporter?
  inspections     Inspection[]
  qaProfile       QAProfile?
}

model QAProfile {
  id             String  @id @default(uuid())
  userId         String  @unique
  address        String
  maxCapacity    Int     @default(100)
  currentLoad    Int     @default(0)
  active         Boolean @default(true)
  pinCode        Int
  latitude       Float?
  longitude      Float?
  testsAvailable Json
  user           User    @relation(fields: [userId], references: [id])
}

model Exporter {
  iecNum   BigInt @id @unique
  address  String
  city     String
  phoneNum BigInt
  country  String
  panNum   String
  gstNum   String
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id])
}

model ProcessingUnit {
  id          String @id @default(uuid())
  name        String
  address     String
  fssaiNumber BigInt
}

model Batch {
  id                  String       @id @default(uuid())
  batchNumber         String       @unique
  cropType            String
  variety             String?      @default("Grade A")
  quantity            Float
  unit                String
  location            String
  pinCode             Int          @default(400092)
  harvestDate         DateTime
  destinationCountry  String
  status              BatchStatus  @default(SUBMITTED)
  traceabilityCode    String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  exporterId          String
  assignedInspectorId String?
  tests               String[]
  assignedInspector   User?        @relation("AssignedInspector", fields: [assignedInspectorId], references: [id])
  exporter            User         @relation("BatchExporter", fields: [exporterId], references: [id])
  certificate         Certificate?
  inspection          Inspection?
}

model Inspection {
  id               String   @id @default(uuid())
  moisture         String
  pesticideResidue String
  organic          Boolean
  heavyMetals      String?
  grade            String?
  isoCode          String?
  notes            String?
  inspectedAt      DateTime @default(now())
  batchId          String   @unique
  inspectorId      String
  batch            Batch    @relation(fields: [batchId], references: [id])
  inspector        User     @relation(fields: [inspectorId], references: [id])
}

model Certificate {
  id           String                @id @default(uuid())
  batchNumber  String
  productType  String
  exporterName String
  qaAgencyName String
  issuedAt     DateTime
  expiresAt    DateTime
  createdAt    DateTime              @default(now())
  batchId      String                @unique
  batch        Batch                 @relation(fields: [batchId], references: [id])
  vc           VerifiableCredential?
}

model VerifiableCredential {
  id            String      @id @default(uuid())
  vcJson        Json
  issuerDid     String
  subjectDid    String
  signature     String
  verifyUrl     String
  createdAt     DateTime    @default(now())
  certificateId String      @unique
  certificate   Certificate @relation(fields: [certificateId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String
  entityType String
  entityId   String
  actorId    String?
  details    Json?
  createdAt  DateTime @default(now())
}

enum UserRole {
  EXPORTER
  QA_AGENCY
  IMPORTER
  ADMIN
}

enum BatchStatus {
  SUBMITTED
  PENDING_APPROVAL
  APPROVED
  REJECTED
  CERTIFIED
}

model CertifyData {
  id              String   @id @default(uuid())
  certificateId   String   @unique 
  
  
  batchNumber     String
  product         String
  grade           String
  origin          String
  quantity        String
  expiryDate      String
  exporterName    String
  inspectorName   String
  moisture        String
  pesticide       String
  organic         Boolean
  
  // Identity Linking: This matches the 'sub' field (DID) in the user's OIDC Token
  exporterDid     String?  
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}