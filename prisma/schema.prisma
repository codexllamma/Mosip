generator client {
  provider = "prisma-client-js"
}

generator pyclient {
  provider             = "prisma-client-py"
  recursive_type_depth = "5"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  password     String
  role         UserRole @default(EXPORTER)
  organization String?
  did          String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

model QAProfile {
  id             String  @id @default(uuid())
  userId         String  @unique
  address        String
  maxCapacity    Int     @default(100)
  currentLoad    Int     @default(0)
  active         Boolean @default(true)
  pinCode        Int
  testsAvailable Json
}

model Batch {
  id                  String      @id @default(uuid())
  batchNumber         String      @unique
  cropType            String
  variety             String      @default("Grade A")
  quantity            Float
  unit                String
  location            String
  pinCode             BigInt      @default(400092)
  harvestDate         DateTime
  destinationCountry  String
  status              BatchStatus @default(PENDING)
  traceabilityCode    String?
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  exporterId          String
  assignedInspectorId String?
}

model Inspection {
  id               String   @id @default(uuid())
  batchId          String
  inspectorId      String
  moisture         String
  pesticideResidue String
  organic          Boolean
  heavyMetals      String?
  grade            String?
  isoCode          String?
  notes            String?
  inspectedAt      DateTime @default(now())
}

model Certificate {
  id           String   @id @default(uuid())
  batchId      String
  batchNumber  String
  productType  String
  exporterName String
  qaAgencyName String
  issuedAt     DateTime
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}

model VerifiableCredential {
  id            String   @id @default(uuid())
  certificateId String
  vcJson        Json
  issuerDid     String
  subjectDid    String
  signature     String
  verifyUrl     String
  createdAt     DateTime @default(now())
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String
  entityType String
  entityId   String
  actorId    String?
  details    Json?
  createdAt  DateTime @default(now())
}

model ProcessingUnit {
  id          String @id
  name        String
  address     String
  fssaiNumber BigInt
}

model Exporter {
  iecNum   BigInt @id @unique
  address  String
  city     String
  phoneNum BigInt
  country  String
  panNum   String
  gstNum   String
}

enum UserRole {
  EXPORTER
  QA_AGENCY
  IMPORTER
  ADMIN
}

enum BatchStatus {
  PENDING
  IN_PROGRESS
  APPROVED
  REJECTED
  CERTIFIED
}
